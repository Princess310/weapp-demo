<view class="weui-cells weui-cells_after-title publish-area">
	<view class="weui-cell">
		<view class="weui-cell__bd">
			<textarea class="weui-textarea" placeholder="输入你可以提供的信息" style="height: 210rpx" bindinput="handleContent" />
		</view>
	</view>
</view>

<view class="weui-cells">
	<view class="weui-cell">
		<view class="weui-cell__bd">
			<view class="weui-uploader">
				<view class="weui-uploader__hd">
					<view class="weui-uploader__title">图片上传</view>
					<view class="weui-uploader__info">{{state.fileCount}}/{{state.filesLimit}}</view>
				</view>
				<view class="weui-uploader__bd">
					<view class="weui-uploader__files" id="uploaderFiles">
						<block wx:for-items="{{state.files}}" wx:key="{{index}}">
								<view class="weui-uploader__file">
									<image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
									<image class="weui-uploader__clear_file" src="../../../images/clear-icon.png" mode="aspectFill" data-index="{{index}}" catchtap="clearFile" />
								</view>
						</block>
						<view class="weui-uploader__input-box">
							<view class="weui-uploader__input" bindtap="chooseImage"></view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</view>

<view class="weui-cells weui-cells_after-title action-wrapper">
	<view class="weui-cell weui-cell_access" hover-class="weui-cell_active" catchtap="selectCategory">
		<view class="weui-cell__bd">
			<text class="publish-label">选择标签</text>
		</view>
		<view class="weui-cell__ft weui-cell__ft_in-access publish-label">{{props.sysEmit.selectMsg.name}}</view>
	</view>
</view>

<button class="weui-btn publish-btn" type="primary" catchtap="handleSubmit">保存</button>
