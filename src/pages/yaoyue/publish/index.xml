<view class="header">
	<view class="type-switch">
		<view class="slider {{state.type === 2 ? 'right' : ''}}"></view>
		<view data-type="{{1}}" class="switch-item {{state.type === 1 ? 'active' : ''}}" catchtap="switchType">
			<text>发需求</text>
		</view>
		<view data-type="{{2}}" class="switch-item {{state.type === 2 ? 'active' : ''}}" catchtap="switchType">
			<text>发供应</text>
		</view>
	</view>
	<view class="publish-btn">
		<text>发送</text>
	</view>
</view>

<view class="weui-cells weui-cells_after-title action-wrapper">
	<view class="weui-cell weui-cell_access" hover-class="weui-cell_active" catchtap="selectCategory">
		<view class="weui-cell__bd">
			<text class="publish-label">类目</text>
		</view>
		<view class="weui-cell__ft weui-cell__ft_in-access publish-label">模式</view>
	</view>
	<view class="weui-cell weui-cell_input">
		<view class="weui-cell__hd">
			<view class="weui-label publish-label">费用</view>
		</view>
		<view class="weui-cell__bd">
			<text class="publish-label">￥</text>
			<input class="weui-input" type="digit" placeholder="输入你觉得合适的价格(选填)"/>
		</view>
	</view>
</view>

<view class="weui-cells weui-cells_after-title publish-area">
	<view class="weui-cell">
		<view class="weui-cell__bd">
			<textarea class="weui-textarea" placeholder="输入你可以提供的信息" style="height: 210rpx" />
		</view>
	</view>
</view>

<view class="weui-cells">
	<view class="weui-cell">
		<view class="weui-cell__bd">
			<view class="weui-uploader">
				<view class="weui-uploader__hd">
					<view class="weui-uploader__title">图片上传</view>
					<view class="weui-uploader__info">{{state.fileCount}}/{{state.filesLimit}}</view>
				</view>
				<view class="weui-uploader__bd">
					<view class="weui-uploader__files" id="uploaderFiles">
						<block wx:for-items="{{state.files}}" wx:key="{{index}}">
								<view class="weui-uploader__file">
									<image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
									<image class="weui-uploader__clear_file" src="../../images/clear-icon.png" mode="aspectFill" data-index="{{index}}" catchtap="clearFile" />
								</view>
						</block>
						<view class="weui-uploader__input-box">
							<view class="weui-uploader__input" bindtap="chooseImage"></view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</view>

<view class="weui-cells weui-cells_after-title">
	<view class="weui-cell weui-cell_switch">
		<view class="weui-cell__bd">添加电话号码</view>
		<view class="weui-cell__ft">
			<switch checked="checked" bindchange="switchTel"></switch>
		</view>
	</view>
	<view wx:if="{{state.showTel}}" class="weui-cell weui-cell_input">
		<view class="weui-cell__bd">
			<input class="weui-input" type="number" maxlength="11" placeholder="请输入你的电话号码"/>
		</view>
	</view>
</view>