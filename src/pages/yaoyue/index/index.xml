<template name="feed-detail-invite">
	<view class="feed-match-card" data-type="{{event_type}}" data-id="{{id}}" data-mid="{{event_id}}" catchtap="handleNav">
		<view class="feed-detail-left">
			<navigator class="user-icon-wrapper" url="../detail/index?id={{id}}">
				<image mode="aspectFill" class="user-icon" src="{{avatar}}"/>
				<view wx:if="{{verify_status == 2}}" class="vip">V</view>
			</navigator>
			<view wx:if="{{city_name !== ''}}" class="city-info">
				<image class="pin" src="../../../images/pin_icon.png" mode="aspectFit"/>
				<text class="distance">{{city_name}}</text>
			</view>
		</view>
		<view class="feed-detail-right">
			<view class="header">
				<view class="wrapper">
					<text class="user-name">{{nickname}}</text>
					<text class="user-company">{{company}}</text>
					<text class="user-position">{{position}}</text>
				</view>
			</view>
			<view class="feed-content">
				<text>{{event_summary}}</text>
			</view>
			<view class="time">
				<text>{{event_at}}</text>
			</view>
		</view>
		<view wx:if="{{reward_item_name !== ''}}" class="reward-item">
				<text>{{reward_item_name}}</text>
		</view>
	</view>
</template>

<view class="ali-header">
	<navigator url="../../common/selectCity/index" class="left-wrapper">
		<text class="name">{{props.match.city.current.name}}</text>
		<image class="icon-menu" src="../../../images/icon_menu_down.png"/>
	</navigator>
	<view class="title">
		<text class="name">人脉</text>
	</view>
	<navigator url="../publish/index" class="right-wrapper">
		<image class="icon-menu" src="../../../images/bianji_active.png"/>
		<text class="name">发需求</text>
	</navigator>
</view>
<navigator class="ali-search-container" url="../../common/searchPanel/index?action=match">
	<view class="weui-search-bar">
		<view class="weui-search-bar__form">
			<view class="weui-search-bar__box">
				<input type="text" class="weui-search-bar__input" placeholder="搜索人脉资源" />
			</view>
			<label class="weui-search-bar__label">
				<icon class="weui-icon-search" type="search" size="14"></icon>
				<view class="weui-search-bar__text">搜索人脉资源</view>
			</label>
		</view>
	</view>
</navigator>

<view class="match-list">
	<block wx:if="{{props.match.list.length > 0}}"></block>
	<block wx:else>
		<view class="no-data">
			<text>没有相关匹配？试试改变搜索条件</text>
		</view>
	</block>
	<block wx:for="{{props.match.list}}"  wx:key="id">
		<template is="feed-detail-invite" data="{{...item, index: index}}" />
	</block>
</view>
